<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_blue_background"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.iit.chrs.gosari.ViewCategory"
    tools:showIn="@layout/app_bar_view_category"
    >



    <Button
        android:id="@+id/btnViewFood"
        android:layout_height="200dp"
        android:layout_width="fill_parent"
        android:background="@drawable/food_image"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        />
    <Button
        android:id="@+id/btnViewNonFood"
        android:layout_height="200dp"
        android:layout_width="fill_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/nonfood_image"
        android:layout_marginBottom="50dp"

        />

</LinearLayout>
