<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        >

        <TextView

            android:id="@+id/tvCart_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Category"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/tvCart_Description_Items"
            android:layout_below="@+id/tvCart_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Description"
            android:textSize="10sp"
            android:textColor="#000000"

            />

        <TextView

            android:id="@+id/tvCart_Count"
            android:layout_below="@id/tvCart_Description_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Count:"
            android:textSize="10sp"
            android:textColor="#000000"
            />



        <TextView

            android:id="@+id/tvCart_Price_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Price"
            android:textSize="10sp"
            android:textColor="#000000"
            android:gravity="right"
            android:layout_below="@+id/tvCart_Count"

            />
        <TextView

            android:layout_below="@+id/tvCart_Price_Items"
            android:id="@+id/tvCart_DeliveryTime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Delivery Time:"
            android:textSize="10sp"
            android:textColor="#000000"
            />


        <Button
            android:id="@+id/btn_remove"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/tvCart_DeliveryTime"
            android:text="REMOVE"
            android:textSize="10sp"
            android:elevation="3dp"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingRight="20dp"
        >
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_xhdpi"
            />
        </LinearLayout>
</android.support.v7.widget.CardView>