<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/cardview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:elevation="100dp"
    card_view:cardBackgroundColor="#f5fffa"
    card_view:cardCornerRadius="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="4dp">


        <TextView
            android:id="@+id/tvCart_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Category"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/tvCart_Description_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Description"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/tvCart_Price_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Price"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/tvCart_Count"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Count:"
            android:textSize="15sp"
            android:textColor="#000000"

            />

        <TextView
            android:id="@+id/tvCart_DeliveryTime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Delivery Time:"
            android:textSize="15sp"
            android:textColor="#000000"

            />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                android:elevation="100dp"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update/Remove"
                        android:textColor="#f5fffa"
                        android:textSize="20sp"
                        android:layout_marginLeft="25dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>